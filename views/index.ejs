<!DOCTYPE html>
<html>

<head>
	<meta charset="utf-8">
	<title>Jupiter</title>

	<script src="../js/jquery.min.js"></script>
	<script src="../js/jquery.waypoints.min.js"></script>
	<script src="../js/jquery.stellar.min.js"></script>
	<script src="../js/hoverIntent.js"></script>
	<script src="../js/superfish.js"></script>
	<link rel="stylesheet" href="../css/bootstrap.css">
	<script src="../js/bootstrap.min.js"></script>
	<script src="../js/jquery.easing.1.3.js"></script>
	<script src="../js/main.js"></script>
</head>

<body>

	<form class="container" >
		<div class="form-group">
			<label class="form-control-label" >File Name</label>
			<input id="fileName" type="text" class="form-control" placeholder="File name" required>
		</div>
		<div class="form-group">
			<label class="form-control-label" >Enter some content</label>
			<textarea id="fileContent" class="form-control" id="message" rows="8" placeholder="Content"></textarea>
		</div>
		<div>
			<button id="saveButton" class="btn btn-primary">Save</button>
		</div>
	</form>

	<script>
		$("#saveButton").click(function () {
			if ($("#fileName").val() === "") {
				return;
			}
			// if ($.trim($("#fileName").val()) === "") {
			// 	return;
			// }
			$.ajax({
				method: "POST",
				contentType: "application/json; charset=utf-8",
				url: "/createFile",
				data: JSON.stringify(
					{
						name: $('#fileName').val().trim(),
						content: $('#fileContent').val()
					}
				)
			}).done(function (msg) {
				document.location.reload();
			});
		});
	</script>
</body>

</html>